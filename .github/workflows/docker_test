name: docker_test
on: 
  workflow_dispatch:
   inputs:
      crdauthcode:
        description: 'Enter ChromeRemoteDesktop Headless code'
        required: true
      pincode:
        description: 'Six digit Pin'
        required: true
defaults:
  run:
    shell: bash
    
jobs:
  build:
    runs-on: ubuntu-20.04
    steps:
    - uses: actions/checkout@v2
#    - name: If failed, means ok
#      run: ./not-exist-file.sh it bloke build
    - name: Preparing Linux Environment
      run: sudo apt-get update
    - name: ======[start instlling docker]=======
    #  if: ${{ failure() }}
      run: chmod +x docker_script ; ./docker_script
      env:
        CHROME_HEADLESS_CODE: ${{ github.event.inputs.crdauthcode }}
        GOOGLE_REMOTE_PIN: ${{ github.event.inputs.pincode }}
    - name: finish him
     # if: ${{ failure() }}
      run: =========[ completed successfully!]==========
